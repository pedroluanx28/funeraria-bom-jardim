{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "types": ["node"],
        "allowImportingTsExtensions": true,
        "noEmit": true,

        /* aliases */
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/app/*", ""]
        }
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
