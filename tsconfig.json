{
	"compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],

		/* aliases */
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*", ""]
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}